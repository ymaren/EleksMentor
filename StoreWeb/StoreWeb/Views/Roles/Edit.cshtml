@model ProductStore.Model.UsersRoleViewModel
@using StoreWeb.Helpers;
@{
    ViewBag.Title = "Edit role ";
    Layout = null;
    @Styles.Render("~/Content/css")
}


@using (Html.BeginForm())
{
<div class="row">

    <div class="col-1"></div>
    <fieldset class="col-md-8 col-md-offset-1 alert-info border-dark">
        <legend> <strong>Edit role</strong> </legend>
        <div>
            <strong>@Html.LabelFor(model => model.UserRoleName, htmlAttributes: new { @class = "control-label col-md-1" })</strong>
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserRoleName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserRoleName, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-info" })
        </div>

    </fieldset>
</div>
}
