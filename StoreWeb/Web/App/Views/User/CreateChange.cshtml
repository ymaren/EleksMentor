@model ProductStore.Model.UserViewModel

@{
    ViewBag.Title = "Edit product category";
    Layout = null;
    @Styles.Render("~/Content/css")
}


    @using (Html.BeginForm())
    {
        <div class="row">
                     
            <div class="col-1"></div>
            <fieldset class="col-md-8 col-md-offset-1 alert-info border-dark">
                <legend> <strong>Edit user</strong> </legend>
                <div>

                    <div>
                        <strong>@Html.LabelFor(model => model.UserLogin, htmlAttributes: new { @class = "control-label col-md-1" })</strong>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserLogin, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserLogin, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <strong>@Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-1" })</strong>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <strong>@Html.LabelFor(model => model.UserPassword, htmlAttributes: new { @class = "control-label col-md-1" })</strong>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <strong>@Html.Label("UserRole", htmlAttributes: new { @class = "control-label col-md-1" })</strong>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.UserRoleId, ViewBag.Roles as SelectList)
                            @Html.ValidationMessageFor(model => model.UserRoleId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                       <div class="form-group">
                        <div class="col-md-offset-1 col-md-10">
                            <input type="submit" value="Save" class="btn btn-success" />
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-info" })
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    }
