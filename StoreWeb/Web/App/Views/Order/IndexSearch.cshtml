@model IEnumerable<ProductStore.Model.OrderHViewModel>

     <tr>
        <td colspan ="6">
         <strong> Total sum </strong>
        </td>
        
           <td>
            @Model.Sum(c=>c.OrderAmount)
           </td>
         
        <td>
            
       </td>
    </tr>

 @{
     int i = 1;
 } 
 @foreach (var item in Model)
 {
    
        <tr>
            <td>
               @(i++)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.ActionLink(item.OrderNumber, "Edit", new { item.OrderId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderType.OrderTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderAmount)
            </td>

            <td class="text-center">
                @using (Html.BeginForm("Delete", "Order"))
                {
                    @Html.Hidden("Id", item.OrderId)
                    <input type="submit"
                           class="btn btn-danger"
                           value="Delete" />
                }
            </td>
        </tr>
 }